{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "outDir": "./dist",

    "baseUrl": ".",
    "paths": {
      "@monorepo/utils": ["../../packages/utils/src"],
      "@monorepo/types": ["../../packages/types/src"]
    },

    "lib": [
      "ES2024"
    ],
    "types": [
      "node"
    ],
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "references": [
    { "path": "../../packages/types" },
    { "path": "../../packages/utils" }
  ]
}
